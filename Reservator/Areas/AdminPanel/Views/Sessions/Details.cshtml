@model Reservator.Models.Session

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Session</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateID)
        </dd>
    </dl>
</div>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Reseravation Datatable
    </div>
    <div class="card-body">
        <div class="mb-4 btn btn-primary">
            <a class="text-white" asp-action="Create">Create New</a>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Score</th>
                        <th>Statement</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.Reservations)
                    {
                        string Name = item.UserInfo.FirstName + " " + item.UserInfo.LastName;
                    <tr>
                        <td>@Name</td>
                        <td>@Html.DisplayFor(modelItem => item.Score)</td>
                        <td>@Html.DisplayFor(modelItem => item.Statement)</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.SessionID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
